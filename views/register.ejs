 <%- include('parts/header')  %> 
 <%- include('parts/navbar')  %> 
<div class="container text-center">
   
    <div class="card">
        <div class="inner-box" id="card">
            <div class="card-front">
                <h2>inscription Client</h2>
                <form action="/register" method="POST"> 
                <input type="email" class="box" name="email" placeholder="saisir votre email" required>
                <input type="password" class="box" name="password" placeholder="saisir le mot de passe" required>
                <input type="name" class="box" name="nom" placeholder="saisir votre nom" required>
                <input type="prenom" class="box" name="prénom" placeholder="saisir votre prénom" required>
                <input type="phone number" class="box" name="téléphone" placeholder="saisir votre numéro de téléphone" required>    
                <button type="submit" class="submit-btn">S'inscrire</button>
                <button type="button" class="submit-btn" onclick="openinscriptionAg()">je suis une agence</button>
                </form>
                <br>
                <% if(authError) { %> 
                <p class="errr">
                  <%=  authError%> 
                 </p>
                <% } %> 
                <% for (let error of validationErrors) {  %> 
                    <p class="errr">
                        <%= error.msg %> 
                    </p>
                    <% } %> 
                <br>
         </div>
         <div class="card-back">
                    <h2>inscription Agence</h2>
                    <form action="/register2" method="POST"> 
                    <input type="email" class="box" name="email" placeholder="saisir votre email" required>
                    <input type="password" class="box" name="password" placeholder="saisir le mot de passe" required>
                    <input type="name" class="box" name="nom" placeholder="saisir le nom de votre agence" required>
                    <input type="tel" class="box" name="téléphone" placeholder="saisir votre numéro de téléphone" required> 
                    <input  type="text"  name="adresse" data-displayname="adresse" id="adresse" aria-required="true" placeholder="l'adresse de votre agence" class="box">
                    <input type="text" class="box" name="CodePostal" id= "nom" placeholder="saisir le Code Postal" size="12" maxlength="12"/>
                    <input type="number" class="box" name="registerNumber" placeholder="saisir votre numéro de registre de commerce" required>
                    <button type="submit" class="submit-btn">S'inscrire</button>
                    <button type="button" class="submit-btn" onclick="openinscriptionC()">je suis un client</button>
                    </form>
                    <br>
                    <% if(authError) { %> 
                    <p class="errr">
                      <%=  authError%> 
                     </p>
                    <% } %>
                    <% for (let error of validationErrors) {  %> 
                        <p class="errr">
                            <%= error.msg %> 
                        </p>
                        <% } %> 
                    <br>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('parts/footer')  %> 